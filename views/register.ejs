<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/navigation.ejs") %>

            <div class="container">
                <div class="row align-items-center" style="min-height: 80vh;">
                    <div class="col-12">
                        <% if(success.msg) { %>
                            <div id="alert" class="alert alert-success alert-dismissible fade show w-50 mx-auto"
                                role="alert">
                                <strong>Successful!</strong>
                                <p><%= success.msg %></p>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>
                    </div>
                    <div class="col-lg-6 mx-auto py-3">
                        <form action="/register" method="POST" class="border rounded p-5">
                            <h3 class="text-center my-2">Create Your Account</h3>

                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" name="username" class="form-control" placeholder="Username"  />
                                <% if (errors.username){ %> 
                                <p class="error"><%= errors.username.msg %></p>
                                <% } %> 
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email address</label>
                                <input type="email" name="email" class="form-control" placeholder="Email" />
                                <% if (errors.email){ %> 
                                <p class="error"><%= errors.email.msg %></p>
                                <% } %> 
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" name="password" class="form-control" placeholder="Password"   />
                                <% if (errors.password){ %> 
                                <p class="error"><%= errors.password.msg %></p>
                                <% } %> 
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Confirm Password</label>
                                <input type="password" name="confirmPassword" class="form-control"
                                    placeholder="Confirm Password"   />
                                    <% if (errors.confirmPassword){ %> 
                                    <p class="error"><%= errors.confirmPassword.msg %></p>
                                    <% } %> 
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="number" name="mobile" class="form-control" placeholder="Mobile"   />
                                <% if (errors.mobile){ %> 
                                <p class="error"><%= errors.mobile.msg %></p>
                                <% } %> 
                            </div>
                            <div class="d-flex justify-content-center gap-3">
                                <div class="mb-3 w-100">
                                    <label class="form-label">Date of Birth</label>
                                    <input type="date" max=<%=new Date().toISOString().split('T')[0] %> name="birthday"
                                    class="form-control"   />
                                    <% if (errors.birthday){ %> 
                                    <p class="error"><%= errors.birthday.msg %></p>
                                    <% } %> 
                                </div>
                                <div class="mb-3 w-100">
                                    <label class="form-label">Select you gender</label>
                                    <div>
                                        <select class="form-select" name="gender"  >
                                            <option value="none" selected>Gender</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                            <option value="other">other</option>
                                        </select>
                                    </div>
                                    <% if (errors.gender){ %> 
                                    <p class="error"><%= errors.gender.msg %></p>
                                    <% } %> 
                                    
                                </div>
                            </div>
                            <button type="submit" class="btn btn-dark w-100">Register</button>
                            <div class="mt-3 text-center">
                                Already have an account? <a href="/login">Sign in</a>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <img src="/images/undraw_road_sign_mfpo.png" alt="undraw_road_sign_mfpo" class="img-fluid">
                    </div>
                </div>
            </div>

            <%- include("./partials/footer.ejs") %>
            <%- include("./partials/scripts.ejs") %>
    </body>

</html>